# Basic Settings
set hidden true
set ignorecase true
set icons true
set preview_images true
set preview_images_method ueberzug
set preview_images_on_hover true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd setwallpaper %cp "$f" ~/.config/wall.jpg && xwallpaper --zoom "$f"

# set cmd preview command
cmd preview = ueberzug layer --parser bash --silent



# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Execute exe
cmd execute ${{
	wine "$f"
}}

# Bindings
# Remove some defaults
# map m
# map o
# map n
# map "'"
# map '"'
# map d

#map c $vscodium "$f"

map au unarchive
map ae execute

# Map editor to nvim
map e $nvim "$f"

# open using <enter> key to remap <enter> key, need to remove enter key by map open first
cmd open $terminator -e "nvim $f" 
map o $terminator -e "nvim $f"

# Basic Functions
map . set hidden!
map DD delete
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map bg setwallpaper
map C clear

# Movement
map gd cd ~/documents
map gD cd ~/downloads
map gp cd ~/pictures
map gc cd ~/.config
map gr cd ~/repos
map gv cd ~/videos/recordings
map gs cd ~/.local/bin
